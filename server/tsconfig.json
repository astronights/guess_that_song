{
  "compilerOptions": {
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  }
}